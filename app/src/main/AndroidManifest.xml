<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adrosonic.craftexchange">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE " />
    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_logo_main_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.modules.buyer.productDetails.CatalogueProductDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.modules.artisan.profile.editProfile.ArtisanEditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.artisan.profile.ArtisanProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.artisan.landing.ArtisanLandingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.buyer.profile.editProfile.BuyerEditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.buyer.profile.BuyerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.cx_demovideo.CXVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.buyer.landing.BuyerLandingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.modules.authentication.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.role.RoleSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.authentication.reset.ResetPasswordActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.authentication.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.modules.artisan.productTemplate.ArtisanAddProductTemplateActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.adrosonic.craftexchange.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <service
            android:name=".services.ProductCreateService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name=".services.wishlist.WishlistService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service android:name=".services.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>