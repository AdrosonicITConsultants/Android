<!--                app:layout_constraintStart_toStartOf="@+id/layoutForMenuArtisan"-->
<!--                app:layout_constraintTop_toTopOf="@+id/artisanDetailsTop">-->

<!--            -->
<!--            </androidx.constraintlayout.widget.ConstraintLayout>-->
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>