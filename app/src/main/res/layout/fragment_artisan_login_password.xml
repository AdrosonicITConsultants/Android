<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.adrosonic.craftexchangemarketing.viewModels.LoginViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artisan_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            tools:context=".ui.modules.artisan.auth.login.ArtisanLoginPasswordFragment">


            <include
                android:id="@+id/logo_part"
                layout="@layout/logo_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />

            <TextView
                android:id="@+id/textView_enter_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular"
                android:fontFamily="@font/playfair_regular"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_part"
                app:layout_constraintVertical_bias="0.063" />

            <EditText
                android:id="@+id/textBox_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:background="@drawable/bd_underline"
                android:drawablePadding="4dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/enter_Username"
                android:inputType="text"
                android:paddingLeft="20px"
                android:textSize="@dimen/edit_text"
                app:layout_constraintBottom_toTopOf="@+id/textBox_password"
                app:layout_constraintEnd_toEndOf="@+id/textView_enter_username"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView_enter_username"
                app:layout_constraintTop_toBottomOf="@+id/textView_enter_username" />

            <EditText
                android:id="@+id/textBox_password"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bd_underline"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/enterPassword"
                android:includeFontPadding="true"
                android:inputType="textPassword"
                android:paddingLeft="20px"
                android:textSize="@dimen/edit_text"
                app:layout_constraintBottom_toTopOf="@+id/text_forgot_pwd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_username"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_forgot_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/forgot_password"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_password" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/rectangle_round_grad_black_solid"
                android:fontFamily="@font/lato_regular"
                android:text="@string/signIn"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/button_text"
                app:layout_constraintBottom_toTopOf="@+id/need_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_password" />

            <TextView
                android:id="@+id/need_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_semimedium"
                android:fontFamily="@font/lato_regular"
                android:text="@string/need"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
                app:layout_constraintEnd_toEndOf="@+id/privacy_policy"
                app:layout_constraintStart_toStartOf="@+id/privacy_policy" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/lato_regular"
                android:text="@string/privacy_policy"
                android:textColor="@color/lighter_gray"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>



