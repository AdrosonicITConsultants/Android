<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/artisan_bank_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.modules.artisan.profile.editProfile.BankEditFragment">

            <TextView
                android:id="@+id/details_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/details_bank"
                android:textColor="@color/black_text"
                android:textSize="24sp"
                android:fontFamily="@font/lato_regular"
                android:textStyle=""/>

            <TextView
                android:id="@+id/field_acc_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/account_no"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/acc_no"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/bank_name"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/bank_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_benificiary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/benificiary_name"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>


            <EditText
                android:id="@+id/benificiary_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/branch"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/branch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_ifsc_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/ifsc_code"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/ifsc_code"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:digits="@string/alphaNumeric2"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <View
                android:id="@+id/divider1"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"/>

            <TextView
                android:id="@+id/digital_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/digital_payment_details"
                android:textColor="@color/black_text"
                android:textSize="24sp"
                android:fontFamily="@font/lato_regular"
                android:textStyle=""/>

            <TextView
                android:id="@+id/field_gpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/gpay_field"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/gpay"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_paytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/paytm_field"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/paytm"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:id="@+id/field_phonepe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/phonepe_field"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/phonepe"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:background="@drawable/rectangle_round_grad"
                android:fontFamily="@font/lato_regular" />

            <Button
                android:id="@+id/btn_save"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_semimedium"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rectangle_round_grad_black_solid"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</layout>