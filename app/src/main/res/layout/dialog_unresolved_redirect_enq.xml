<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/moq_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/expandable_layout_std_padding"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Unresolved - Redirect as new enquiry?"
            android:textColor="@color/black_text"
            android:textSize="@dimen/title_text" />

        <TextView
            android:id="@+id/txt_enq_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@color/clickable_text_color"
            android:textSize="@dimen/title_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Are you sure there was no resolution for the same, and the dispute cannot be resolverd?"
            android:textColor="@color/red_logo"
            android:textSize="@dimen/product_note_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_art_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_weight="1.5"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="Auto escalation- faulty orders"
                android:textColor="@color/unselected_text_color"
                android:textSize="@dimen/product_title_text" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txt_buyer_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_weight="1.5"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="Auto escalation- faulty orders"
                android:textColor="@color/unselected_text_color"
                android:textSize="@dimen/product_title_text" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Auto escalation- faulty orders"
            android:textColor="@color/unselected_text_color"
            android:textSize="@dimen/title_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Note: Current enquiry will be closed after artisan marks order received back and buyer marks refund received. The details shall be copied with a new enquiry number and will require redirection to another artisan."
            android:textColor="@color/red_logo"
            android:textSize="@dimen/product_note_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2.5">
            <TextView
                android:id="@+id/txt_gen_new_enq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/rect_round_red_solid"
                android:fontFamily="@font/lato_regular"
                android:padding="8dp"
                android:text="Generate new enquiry"
                android:textAlignment="center"
                android:textColor="@color/white_text" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>