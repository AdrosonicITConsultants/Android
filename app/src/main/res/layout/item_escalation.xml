<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_semimedium"
        android:layout_marginEnd="@dimen/margin_semimedium"
        android:layout_marginBottom="@dimen/margin_regular"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_sent_escalation"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sen_description_esc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_regular"
                android:maxLength="500"
                android:maxLines="4"
                android:textColor="@color/black_text"
                android:textSize="@dimen/product_note_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_you"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you"
                android:textColor="@color/dark_magenta"
                android:textSize="@dimen/product_availability_text"
                android:fontFamily="@font/lato_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txt_sen_status_esc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:drawablePadding="4dp"
                android:focusable="true"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/product_availability_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_sen_description_esc"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_sen_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/product_availability_text"
                app:layout_constraintBottom_toBottomOf="@+id/txt_sen_status_esc"
                app:layout_constraintEnd_toStartOf="@+id/txt_sen_status_esc"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_sen_status_esc"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_receive_escalation"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/black_text"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_rec_description_esc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_regular"
                android:maxLength="500"
                android:maxLines="4"
                android:textColor="@color/white_text"
                android:textSize="@dimen/product_note_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_rec_status_esc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_regular"
                android:maxLines="1"
                android:textSize="@dimen/product_availability_text"
                android:gravity="center"
                android:drawablePadding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_rec_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_rec_description_esc"
                app:layout_constraintTop_toBottomOf="@+id/txt_rec_description_esc"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_rec_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_regular"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/lighter_gray"
                android:textSize="@dimen/product_availability_text"
                app:layout_constraintBottom_toBottomOf="@+id/txt_rec_status_esc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_rec_status_esc"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>