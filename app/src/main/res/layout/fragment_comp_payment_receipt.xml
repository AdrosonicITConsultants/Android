<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_receipt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/advance_payemnt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSplash"
                tools:context=".ui.modules.artisan.enquiry.advPay.CompPaymentReceiptFragment">

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="@dimen/margin_regular"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_keyboard_backspace_black_24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/approve_adv_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/approve_advance_payment"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/product_note_text"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/btn_back"
                            app:layout_constraintTop_toTopOf="@+id/btn_back" />


                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="@+id/approve_adv_pay"
                            app:layout_constraintTop_toBottomOf="@+id/approve_adv_pay" />

                        <FrameLayout
                            android:id="@+id/prod_image_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_back_enq_view_artisan"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/date"
                            app:layout_constraintVertical_bias="0.0">

                            <ImageView
                                android:id="@+id/product_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/brand_logo_back"
                                android:scaleType="fitXY" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/product_availability_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/prod_image_background" />

                        <TextView
                            android:id="@+id/product_Availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/dark_magenta"
                            android:textSize="@dimen/product_availability_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/product_name" />

                        <TextView
                            android:id="@+id/product_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/product_note_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/product_Availability" />

                        <ImageView
                            android:id="@+id/enquiry_status_dot"
                            android:layout_width="8sp"
                            android:layout_height="8sp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_dot"
                            app:layout_constraintBottom_toBottomOf="@+id/enquiry_status_text"
                            app:layout_constraintEnd_toStartOf="@+id/enquiry_status_text"
                            app:layout_constraintTop_toTopOf="@+id/enquiry_status_text" />

                        <TextView
                            android:id="@+id/enquiry_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="@+id/product_amount"
                            app:layout_constraintStart_toStartOf="@+id/product_amount"
                            app:layout_constraintTop_toBottomOf="@+id/product_amount" />

                        <TextView
                            android:id="@+id/enquiry_update_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/light_green"
                            android:textSize="8sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/enquiry_status_text" />

                        <TextView
                            android:id="@+id/buyer_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/swipe_background"
                            android:textSize="8sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/enquiry_update_date" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/middle_receipt_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_part">

                    <TextView
                        android:id="@+id/payment_receipt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_regular"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/payment_receipt"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/product_availability_text"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/amt_paid_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_semimedium"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:layout_marginEnd="@dimen/margin_semimedium"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/amt_to_be_paid_as_per_pi"
                        android:textColor="@color/swipe_background"
                        android:textSize="@dimen/product_note_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/payment_receipt" />

                    <ImageView
                        android:id="@+id/payment_img"
                        android:layout_width="0dp"
                        android:layout_height="400dp"
                        android:layout_marginStart="@dimen/margin_regular"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:layout_marginEnd="@dimen/margin_regular"
                        android:focusable="true"
                        android:elevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/amt_paid_text" />

                    <ProgressBar
                        android:id="@+id/loader"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:layout_constraintStart_toStartOf="@+id/payment_img"
                        app:layout_constraintEnd_toEndOf="@+id/payment_img"
                        app:layout_constraintTop_toTopOf="@+id/payment_img"
                        app:layout_constraintBottom_toBottomOf="@+id/payment_img"/>

                    <TextView
                        android:id="@+id/doubletap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="@string/double_tap_to_zoom"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/payment_img"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/payment_img"
                        app:layout_constraintTop_toBottomOf="@+id/payment_img" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</layout>


