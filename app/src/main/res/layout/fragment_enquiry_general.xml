<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/buy_enq_bank_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.modules.enquiry.EnquiryGeneralFragment">

            <TextView
                android:id="@+id/field_reg_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/reg_addr"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:id="@+id/reg_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:layout_marginStart="@dimen/margin_regular"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:textColor="@android:color/holo_blue_bright"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/field_delivery_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginStart="@dimen/margin_regular"
                android:text="@string/delivery_addr"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"/>


            <TextView
                android:id="@+id/del_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:id="@+id/del_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:textColor="@android:color/holo_blue_bright"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email_black_18dp"
                android:drawablePadding="8dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone_black_18dp"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:fontFamily="@font/lato_regular"/>

        </LinearLayout>
    </ScrollView>
</layout>