<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/moq_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/expandable_layout_std_padding"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Are you sure good choice?"
            android:textColor="@color/black_text"
            android:textSize="@dimen/title_text" />

        <TextView
            android:id="@+id/brand_cluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Chidiya from Manibandhana"
            android:textColor="@color/clickable_text_color"
            android:textSize="@dimen/title_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="@string/moq"
            android:textSize="@dimen/product_note_text" />

        <TextView
            android:id="@+id/moq_order_qty"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@color/swipe_background"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="@string/price_per_unit"
            android:textSize="@dimen/product_note_text" />

        <TextView
            android:id="@+id/moq_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@color/swipe_background"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="@string/eta_delivery"
            android:textSize="@dimen/product_note_text" />

        <TextView
            android:id="@+id/moq_order_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@color/swipe_background"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rectangle_round_grad"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textColor="@color/black_text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.50" />.

            <TextView
                android:id="@+id/txt_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rect_round_grad_blue_solid"
                android:fontFamily="@font/lato_regular"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="  Accept  "
                android:textAlignment="center"
                android:textColor="@color/white_text" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>