<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="catEvent"
            type="com.adrosonic.craftexchange.ui.interfaces.CategoryProductClick"/>

        <variable
            name="categoryDetails"
            type="com.adrosonic.craftexchange.repository.data.response.viewProducts.ProductType"/>

        <variable
            name="brandEvent"
            type="com.adrosonic.craftexchange.ui.interfaces.BrandProductClick"/>

        <variable
            name="brandProducts"
            type="com.adrosonic.craftexchange.database.entities.realmEntities.ProductCard"/>

        <variable
            name="regionEvent"
            type="com.adrosonic.craftexchange.ui.interfaces.ClusterProductClick"/>

        <variable
            name="regionProducts"
            type="com.adrosonic.craftexchange.database.entities.realmEntities.ProductCard"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_desc_bck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_regular">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.like.LikeButton
                    android:id="@+id/wishlist_button"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    app:anim_scale_factor="1"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:layout_marginEnd="@dimen/margin_regular"
                    app:icon_size="20dp"
                    app:icon_type="heart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:text="Golden silk fbric with golden cjsfkgm"
                    android:textColor="@color/black_text"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_semimedium"
                    android:layout_marginTop="@dimen/margin_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/wishlist_button"/>

                <ImageView
                    android:id="@+id/design_logo"
                    android:layout_width="16dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_artisan_self_design_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/product_available_text"
                    app:layout_constraintStart_toStartOf="@+id/product_title"
                    app:layout_constraintTop_toTopOf="@+id/product_available_text" />

                <TextView
                    android:id="@+id/product_available_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/light_green"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/wishlist_button"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/design_logo"
                    app:layout_constraintTop_toBottomOf="@+id/product_title" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/lato_regular"
                    android:maxLines="3"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/wishlist_button"
                    app:layout_constraintStart_toStartOf="@+id/design_logo"
                    app:layout_constraintTop_toBottomOf="@+id/product_available_text" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_description">

                    <Button
                        android:id="@+id/btn_view_more"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/view_more"
                        android:textAllCaps="false"
                        android:textColor="@color/black_text"
                        android:fontFamily="@font/lato_regular"
                        android:textAlignment="center"
                        android:background="@color/colorSplash"/>

                    <Button
                        android:id="@+id/btn_generate_enquiry"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/generate_enquiry"
                        android:textColor="@color/white_text"
                        android:textAllCaps="false"
                        android:paddingEnd="@dimen/margin_regular"
                        android:fontFamily="@font/lato_regular"
                        android:textAlignment="center"
                        android:drawableEnd="@drawable/ic_arrow_right_alt_white_18dp"
                        android:background="@color/black_text"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>