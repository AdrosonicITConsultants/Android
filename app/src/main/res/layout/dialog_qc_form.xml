<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@color/black_text"
    android:padding="8dp">

    <TextView
        android:id="@+id/update_qc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_regular"
        android:fontFamily="@font/lato_light"
        android:text="@string/update_qc_form_text"
        android:textAlignment="center"
        android:textColor="@color/white_text"
        android:textSize="@dimen/product_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_fill_qc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_semimedium"
        android:layout_marginBottom="@dimen/margin_regular"
        android:background="#FFEABA"
        android:drawableEnd="@drawable/ic_btn_right_arrow_brown"
        android:elevation="8dp"
        android:fontFamily="@font/lato_regular"
        android:padding="2dp"
        android:text="@string/fill_in_qc_form"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D9B45E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_qc_text" />

    <TextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lato_bold"
        android:text="@string/skip"
        android:textAlignment="center"
        android:textColor="@color/white_text"
        android:textSize="@dimen/product_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_fill_qc"
        app:layout_constraintStart_toStartOf="@+id/btn_fill_qc"
        app:layout_constraintTop_toBottomOf="@+id/btn_fill_qc" />


</androidx.constraintlayout.widget.ConstraintLayout>