<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_yarn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/expandable_layout_std_padding"
                android:src="@drawable/ic_warp_icon" />

            <TextView
                android:id="@+id/txt_yarn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/lato_regular"
                android:text="Warp"
                android:textColor="@color/black_text"
                android:textSize="18sp"

                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_spinner_bg">

            <Spinner
                android:id="@+id/sp_yarn_type"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Select product category" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_spinner_bg">

            <Spinner
                android:id="@+id/sp_yarn_count"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Product type" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_yarn_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_edittext_bg"
            android:hint="Enter the count of yarn"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/edit_text"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_spinner_bg">

            <Spinner
                android:id="@+id/sp_yarn_dye"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Product type" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>