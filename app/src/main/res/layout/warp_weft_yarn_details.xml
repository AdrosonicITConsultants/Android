<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_warp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/expandable_layout_std_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_warp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:drawableRight="@drawable/ic_warp"
            android:text="Warp "
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_warp_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Select product category"
            android:background="@drawable/rectangle_edittext_bg" />

        <Spinner
            android:id="@+id/sp_warp_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />

        <EditText
            android:id="@+id/et_warp_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_edittext_bg"
            android:hint="Product code(Eg. NAG09_89)"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/edit_text"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/sp_warp_dye"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/expandable_layout_std_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_weft_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:drawableRight="@drawable/ic_warp"
            android:text="Weft "
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_weft_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Select product category"
            android:background="@drawable/rectangle_edittext_bg" />

        <Spinner
            android:id="@+id/sp_weft_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />

        <EditText
            android:id="@+id/et_weft_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_edittext_bg"
            android:hint="Product code(Eg. NAG09_89)"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/edit_text"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/sp_weft_dye"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_extra_weft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/expandable_layout_std_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_extra_weft_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:drawableRight="@drawable/ic_warp"
            android:text="Extra weft(Optional) "
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_extra_weft_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Select product category"
            android:background="@drawable/rectangle_edittext_bg" />

        <Spinner
            android:id="@+id/sp_extra_weft_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />

        <EditText
            android:id="@+id/et_extra_weft_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:background="@drawable/rectangle_edittext_bg"
            android:hint="Product code(Eg. NAG09_89)"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/edit_text"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/sp_extra_weft_dye"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/expandable_layout_std_padding"
            android:autofillHints="Product type"
            android:background="@drawable/rectangle_edittext_bg" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>