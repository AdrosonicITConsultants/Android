<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="productCare"
            type="com.adrosonic.craftexchange.repository.data.response.artisan.productTemplate.ProductCare" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/care_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/care_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/product_availability_text"
            android:fontFamily="@font/lato_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/care_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_icon"
            app:layout_constraintBottom_toBottomOf="@+id/care_icon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>