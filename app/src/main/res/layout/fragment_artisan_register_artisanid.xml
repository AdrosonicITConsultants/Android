<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable name="model"
            type="com.adrosonic.craftexchange.viewModels.AuthenticationViewModel"/>

        <variable
            name="sendOtpLoader"
            type="Boolean" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artisan_register_artisanid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            tools:context=".ui.modules.artisan.auth.register.ArtisanRegisterUsernameFragment">


        <TextView
                android:id="@+id/artisan_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:text="@string/artisan"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02" />

            <include
                android:id="@+id/logo_part"
                layout="@layout/logo_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />

            <TextView
                android:id="@+id/textView_enter_artisanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular"
                android:fontFamily="@font/playfair_regular"
                android:paddingStart="@dimen/margin_regular"
                android:paddingEnd="@dimen/margin_regular"
                android:text="@string/enter_artisan_id"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="@dimen/Ques_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_part"
                app:layout_constraintVertical_bias="0.100000024" />

            <EditText
                android:id="@+id/textBox_artisanId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="@drawable/rectangle_round_grad"
                android:drawableStart="@drawable/ic_icon_artisan_id"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/edit_text"
                android:layout_marginBottom="@dimen/margin_regular"
                app:layout_constraintTop_toBottomOf="@+id/textView_enter_artisanId"
                app:layout_constraintStart_toStartOf="@+id/textView_enter_artisanId"
                app:layout_constraintEnd_toEndOf="@+id/textView_enter_artisanId"/>

            <Button
                android:id="@+id/button_next"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginBottom="@dimen/margin_semimedium"
                android:background="@drawable/rectangle_round_grad_black_solid"
                android:fontFamily="@font/lato_regular"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_getin_touch"
                app:layout_constraintEnd_toEndOf="@+id/textBox_artisanId"
                app:layout_constraintStart_toStartOf="@+id/textBox_artisanId"
                app:layout_constraintTop_toBottomOf="@+id/textBox_artisanId"
                app:layout_constraintVertical_bias="0.00999999" />

            <TextView
                android:id="@+id/textView_getin_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_regular"
                android:fontFamily="@font/lato_regular"
                android:text="@string/no_artisanId_text"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/button_reach"
                app:layout_constraintEnd_toEndOf="@+id/button_reach"
                app:layout_constraintStart_toStartOf="@+id/button_reach" />

            <Button
                android:id="@+id/button_reach"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_semimedium"
                android:background="@drawable/rectangle_round_small"
                android:fontFamily="@font/lato_regular"
                android:text="@string/reach_out_button"
                android:textAllCaps="false"
                android:textColor="#000"
                app:layout_constraintBottom_toTopOf="@+id/change_language"
                app:layout_constraintEnd_toEndOf="@+id/change_language"
                app:layout_constraintStart_toStartOf="@+id/change_language" />

            <ImageView
                android:id="@+id/change_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_regular"
                android:contentDescription="@string/change_lang_desc"
                android:src="@drawable/ic_change_language"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_regular"
                android:text="@string/need_help2"
                android:textSize="16sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/change_language"
                app:layout_constraintTop_toTopOf="@+id/change_language"
                app:layout_constraintBottom_toBottomOf="@+id/change_language"/>

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="@string/privacy_policy"
                android:textColor="@color/lighter_gray"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="@+id/change_language"
                app:layout_constraintBottom_toBottomOf="@+id/change_language"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/change_language"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>