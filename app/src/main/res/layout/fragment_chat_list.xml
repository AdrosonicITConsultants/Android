<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_ongoing_chats"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSplash"
                tools:context=".ui.modules.chat.ChatListFragment">

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/chat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="@dimen/margin_regular"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/chats"
                            android:textColor="#000"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/initiate_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:contentDescription="Initiate New Chat"
                            android:src="@drawable/ic_initiate_chat"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.85"
                            app:layout_constraintStart_toEndOf="@id/chat_text"
                            app:layout_constraintTop_toTopOf="@+id/chat_text" />


                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search_ongo_chat"
                            android:layout_width="408dp"
                            android:layout_height="38dp"
                            android:background="@color/lighter_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/chat_text"
                            app:queryBackground="@android:color/transparent"
                            app:queryHint="@string/search_chat_by_enquiryId"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="2dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                android:id="@+id/chat_uninitiated_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorSplash"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_part">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/uninitiated_chat_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_initiated_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorSplash"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_part">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/initiated_chat_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>