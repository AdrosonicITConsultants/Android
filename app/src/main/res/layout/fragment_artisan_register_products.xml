<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.adrosonic.craftexchange.ui.modules.authentication.register.RegisterViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artisan_register_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            tools:context=".ui.modules.artisan.authentication.register.ArtisanRegisterProductsFragment">

            <TextView
                android:id="@+id/artisan_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:text="@string/artisan"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <include
                android:id="@+id/logo_part"
                layout="@layout/logo_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />

            <ImageView
                android:id="@+id/upload_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_semimedium"
                android:background="@drawable/upload_icon_artist"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_part"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/divider"
                style="@style/HorizontalDivider4"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/upload_product"
                app:layout_constraintEnd_toEndOf="@+id/upload_product"
                app:layout_constraintTop_toBottomOf="@+id/upload_product"/>

            <TextView
                android:id="@+id/textView_select_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:fontFamily="@font/playfair_regular"
                android:text="@string/text_select_cat"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <RelativeLayout
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="@drawable/rectangle_round_grad"
                app:layout_constraintEnd_toEndOf="@+id/textView_select_category"
                app:layout_constraintStart_toStartOf="@+id/textView_select_category"
                app:layout_constraintTop_toBottomOf="@+id/textView_select_category">

                <com.adrosonic.craftexchange.utils.MultiSelectionSpinner
                    android:id="@+id/list_products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            </RelativeLayout>



            <TextView
                android:id="@+id/text_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:text="@string/skip_text_artisan"
                android:fontFamily="@font/lato_regular"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintStart_toStartOf="@+id/spinner"
                app:layout_constraintEnd_toEndOf="@+id/spinner"/>

            <Button
                android:id="@+id/button_complete"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="@drawable/rectangle_round_grad_black_solid"
                android:fontFamily="@font/lato_regular"
                android:text="@string/complete"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/text_tnct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_skip"
                app:layout_constraintVertical_bias="0.0" />

            <CheckBox
                android:id="@+id/checkBox_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/text_tnct"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_tnct" />

            <TextView
                android:id="@+id/text_tnct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_semimedium"
                android:fontFamily="@font/lato_regular"
                android:text="@string/text_to_tnc"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/change_language"
                app:layout_constraintEnd_toEndOf="@+id/change_language"
                app:layout_constraintStart_toStartOf="@+id/change_language" />

            <ImageView
                android:id="@+id/change_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_regular"
                android:contentDescription="@string/change_lang_desc"
                android:src="@drawable/ic_change_language"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_regular"
                android:text="@string/need_help2"
                android:textSize="16sp"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/change_language"
                app:layout_constraintTop_toTopOf="@+id/change_language"
                app:layout_constraintBottom_toBottomOf="@+id/change_language"/>

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="@string/privacy_policy"
                android:textColor="@color/lighter_gray"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="@+id/change_language"
                app:layout_constraintBottom_toBottomOf="@+id/change_language"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/change_language"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
