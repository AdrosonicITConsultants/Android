<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_enquiry_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_text"
        tools:context=".ui.modules.buyer.enquiry.CommonEnquiryFragment">

        <TextView
            android:id="@+id/your_enquiries_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="Redirect Enquiries"
            android:textColor="@color/colorBackground"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/prod_tab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Total artisans : 3000"
            android:textColor="@color/colorBackground"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_enquiries_text" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/prod_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:tabIndicatorColor="@color/colorBackground"
            app:tabSelectedTextColor="@color/colorBackground"
            app:tabTextAppearance="@style/artisan_viewprod_tab_text"
            app:tabTextColor="@color/darker_gray">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/enq_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:text="Custom" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/enq_faulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:text="Faulty" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/enq_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />

        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager_view_enquiries"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prod_tab"
            app:layout_constraintVertical_bias="0.58">

        </androidx.viewpager.widget.ViewPager>

        <TextView
            android:id="@+id/txt_re_dir_enq_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/lighter_gray"
            app:layout_constraintBottom_toTopOf="@+id/prod_tab"
            app:layout_constraintEnd_toEndOf="@+id/prod_tab"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/your_enquiries_text"
            app:layout_constraintTop_toTopOf="@+id/your_enquiries_text"
            app:layout_constraintVertical_bias="1.0" />

        <ProgressBar
            android:id="@+id/pbLoader"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="168dp"
            android:layout_marginEnd="69dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/DatabaseImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>