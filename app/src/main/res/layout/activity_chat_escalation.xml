<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_esc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_esc_back"
        tools:context=".ui.modules.chat.ChatEscalationActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_arrow_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_escalations"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_text"
                android:text="@string/escalations"
                android:layout_marginStart="@dimen/margin_regular"
                android:textSize="@dimen/product_title_text"
                app:layout_constraintTop_toTopOf="@+id/btn_back"
                app:layout_constraintStart_toEndOf="@+id/btn_back"/>

            <TextView
                android:id="@+id/enquiry_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#FF7C7E"
                android:text="AN-432-N9"
                android:layout_marginTop="6dp"
                android:textSize="@dimen/product_description_text"
                app:layout_constraintTop_toBottomOf="@+id/txt_escalations"
                app:layout_constraintStart_toStartOf="@+id/txt_escalations"/>

            <TextView
                android:id="@+id/txt_num_escalations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white_text"
                android:text=" 0 Escalations"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                android:textSize="@dimen/product_note_text"
                app:layout_constraintTop_toBottomOf="@+id/enquiry_code"
                app:layout_constraintStart_toEndOf="@+id/imgEscalations"/>

            <ImageView
                android:id="@+id/imgEscalations"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num_escalations"
                app:layout_constraintStart_toStartOf="@+id/enquiry_code"
                app:layout_constraintTop_toTopOf="@+id/txt_num_escalations"
                app:srcCompat="@drawable/ic_escalation_white" />

            <ImageView
                android:id="@+id/icon_change_request"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:src="@drawable/ic_cr_with_txt"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/icon_escalation"
                app:layout_constraintEnd_toStartOf="@+id/icon_escalation"
                app:layout_constraintTop_toTopOf="@+id/brand_name"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/icon_escalation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_escalation_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_chats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

<!--            <com.github.bassaer.chatmessageview.view.ChatView-->
<!--                android:id="@+id/chat_view"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                app:date_separator_font_size="16sp"-->
<!--                app:message_font_size="12sp"-->
<!--                app:message_max_width="200dp"-->
<!--                app:time_label_font_size="10sp"-->
<!--                app:username_font_size="12sp"-->
<!--                app:text_selectable="true">-->

<!--            </com.github.bassaer.chatmessageview.view.ChatView>-->
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
