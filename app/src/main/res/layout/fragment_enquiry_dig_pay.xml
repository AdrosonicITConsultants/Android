<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/art_enq_dig_pay_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.modules.enquiry.EnquiryDigPayFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gpay_layout"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/gpay_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_gpay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/field_gpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/gpay_field"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/gpay_logo"
                    app:layout_constraintTop_toTopOf="@+id/gpay_logo"/>

                <TextView
                    android:id="@+id/gpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintTop_toBottomOf="@+id/field_gpay"
                    app:layout_constraintStart_toEndOf="@+id/gpay_logo"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paytm_layout"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/paytm_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_paytm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/field_paytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/paytm_field"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/paytm_logo"
                    app:layout_constraintTop_toTopOf="@+id/paytm_logo"/>

                <TextView
                    android:id="@+id/paytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintTop_toBottomOf="@+id/field_paytm"
                    app:layout_constraintStart_toEndOf="@+id/paytm_logo"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/phonepe_layout"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/phonepe_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_phonepe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/field_phonepe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/phonepe_field"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/phonepe_logo"
                    app:layout_constraintTop_toTopOf="@+id/phonepe_logo"/>

                <TextView
                    android:id="@+id/phonepe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintTop_toBottomOf="@+id/field_phonepe"
                    app:layout_constraintStart_toEndOf="@+id/phonepe_logo"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</layout>