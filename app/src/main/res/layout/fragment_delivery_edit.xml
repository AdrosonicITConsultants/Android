<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/buyer_delivery_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.modules.buyer.profile.editProfile.DeliveryEditFragment">

        <TextView
            android:id="@+id/field_delivery_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/delivery_addr"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginStart="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="Company Name"/>

        <EditText
            android:id="@+id/comp_addr"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:textColor="@android:color/holo_blue_bright"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:text="Country"/>

    </LinearLayout>
</layout>

