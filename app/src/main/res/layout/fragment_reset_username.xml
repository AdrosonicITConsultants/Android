<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sendOtpLoader"
            type="Boolean" />

        <import type="android.view.View" />

        <variable name="model" type="com.adrosonic.craftexchangemarketing.ui.modules.authentication.reset.ResetPasswordViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reset_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_text"
            tools:context=".ui.modules.authentication.reset.ResetUsernameFragment">

            <include
                android:id="@+id/logo_part"
                layout="@layout/logo_side"
                android:layout_width="410dp"
                android:layout_height="157dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />

            <TextView
                android:id="@+id/textView_enter_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular"
                android:fontFamily="@font/playfair_regular"
                android:paddingStart="@dimen/margin_regular"
                android:paddingEnd="@dimen/margin_regular"
                android:text="@string/resertPassword"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/Ques_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3" />

            <EditText
                android:id="@+id/textBox_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:background="@drawable/bd_underline"
                android:drawableStart="@drawable/ic_alternate_email_black_24dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/enter_Username"
                android:inputType="text"
                android:textColor="@color/colorBackground"
                android:textColorHint="@color/colorBackground"
                android:textSize="@dimen/edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_enter_username" />

            <Button
                android:id="@+id/button_send_otp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_round_small"
                android:fontFamily="@font/lato_regular"
                android:text="@string/send_otp"
                android:textAllCaps="false"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_username" />

            <EditText
                android:id="@+id/textBox_otp"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_underline"
                android:drawableStart="@drawable/ic_icon_simple_coderwall"
                android:drawablePadding="4dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/enter_otp"
                android:inputType="phone"
                android:maxLength="6"
                android:selectAllOnFocus="false"
                android:textColor="@color/colorBackground"
                android:textColorHint="@color/colorBackground"
                android:textSize="@dimen/edit_text"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_send_otp" />

            <Button
                android:id="@+id/button_verify"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_round_small"
                android:backgroundTintMode="src_over"
                android:fontFamily="@font/lato_regular"
                android:text="@string/verify_proceed"
                android:textAllCaps="false"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_otp" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/privacy_policy"
                android:textColor="@android:color/holo_blue_bright"
                android:textColorLink="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <FrameLayout
                android:id="@+id/progress_layout"
                android:layout_width="194dp"
                android:layout_height="296dp"
                android:contextClickable="false"
                android:elevation="10dp"
                android:visibility="@{sendOtpLoader ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.473">

                <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

