<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sendOtpLoader"
            type="Boolean" />

        <import type="android.view.View" />

        <variable name="model" type="com.adrosonic.craftexchange.ui.modules.auth_com.reset.ResetPasswordViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        tools:context=".ui.modules.auth_com.reset.ResetUsernameFragment">

        <TextView
            android:id="@+id/profile_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"/>

        <include
            android:id="@+id/logo_part"
            layout="@layout/logo_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView_enter_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_regular"
            android:fontFamily="@font/playfair_regular"
            android:paddingStart="@dimen/margin_regular"
            android:paddingEnd="@dimen/margin_regular"
            android:text="@string/enter_email"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/Ques_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_part"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/textBox_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad"
            android:drawableStart="@drawable/ic_alternate_email_black_24dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/lato_regular"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/edit_text"
            android:layout_marginBottom="@dimen/margin_regular"
            app:layout_constraintTop_toBottomOf="@+id/textView_enter_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/button_send_otp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad_black_solid"
            android:fontFamily="@font/lato_regular"
            android:text="@string/send_otp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="@+id/textBox_username"
            app:layout_constraintStart_toStartOf="@+id/textBox_username"
            app:layout_constraintTop_toBottomOf="@+id/textBox_username" />

        <TextView
            android:id="@+id/textView_enter_rec_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:text="@string/enter_otp"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintEnd_toEndOf="@+id/button_send_otp"
            app:layout_constraintStart_toStartOf="@+id/button_send_otp"
            app:layout_constraintTop_toBottomOf="@+id/button_send_otp" />

        <EditText
            android:id="@+id/textBox_otp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="phone"
            android:maxLength="6"
            android:drawableStart="@drawable/ic_icon_simple_coderwall"
            android:drawablePadding="4dp"
            android:textSize="@dimen/edit_text"
            app:layout_constraintEnd_toEndOf="@+id/textView_enter_rec_otp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_enter_rec_otp"
            app:layout_constraintTop_toBottomOf="@+id/textView_enter_rec_otp" />

        <Button
            android:id="@+id/button_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginBottom="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad_black_solid"
            android:fontFamily="@font/lato_regular"
            android:text="@string/verify_proceed"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            android:backgroundTintMode="src_over"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="@+id/textBox_otp"
            app:layout_constraintStart_toStartOf="@+id/textBox_otp"
            app:layout_constraintTop_toBottomOf="@+id/textBox_otp"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider2"
            style="@style/HorizontalDivider3"
            android:layout_marginBottom="@dimen/margin_regular"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView_contact_us"/>

        <TextView
            android:id="@+id/textView_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/reach_out_text"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/button_reach"
            app:layout_constraintEnd_toEndOf="@+id/button_reach"
            app:layout_constraintStart_toStartOf="@+id/button_reach" />

        <Button
            android:id="@+id/button_reach"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_small"
            android:fontFamily="@font/lato_regular"
            android:text="@string/reach_out_button"
            android:textAllCaps="false"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
            app:layout_constraintEnd_toEndOf="@+id/privacy_policy"
            app:layout_constraintStart_toStartOf="@+id/privacy_policy" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/privacy_policy"
            android:textColor="@color/lighter_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{sendOtpLoader ? View.VISIBLE : View.GONE}"
            android:elevation="10dp"
            android:contextClickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_gravity="center"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

