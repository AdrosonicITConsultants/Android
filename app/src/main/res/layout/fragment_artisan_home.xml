<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/artisan_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_text"
            tools:context=".ui.modules.artisan.landing.ArtisanHomeFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_thread_mobile_artisan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_semimedium"
                    android:fontFamily="@font/playfair_regular"
                    android:textColor="@color/black_text"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/brand_logo_artisan"
                    android:layout_width="@dimen/imageview_dim"
                    android:layout_height="@dimen/imageview_dim"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:layout_marginBottom="@dimen/margin_semimedium"
                    android:background="@drawable/brand_logo_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/welcome_text"
                    app:layout_constraintStart_toStartOf="@+id/welcome_text"
                    app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="@+id/brand_logo_artisan"
                    app:layout_constraintBottom_toBottomOf="@+id/brand_logo_artisan"
                    app:layout_constraintStart_toStartOf="@+id/brand_logo_artisan"
                    app:layout_constraintEnd_toEndOf="@+id/brand_logo_artisan"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/add_prod_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/add_prod_grad"
                app:layout_constraintTop_toBottomOf="@+id/top_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnAddProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_regular"
                    android:elevation="8dp"
                    android:background="@drawable/rectangle_round_grad"
                    android:backgroundTint="@color/colorSplash"
                    android:drawableStart="@drawable/ic_add_prod_icon"
                    android:drawablePadding="@dimen/margin_regular"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:text="@string/add_new_prod"
                    android:textAllCaps="false"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/edit_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/your_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_product"
                android:fontFamily="@font/playfair_regular"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/title_text"
                android:textColor="@color/white_text"
                app:layout_constraintTop_toBottomOf="@+id/add_prod_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/list_of_prod_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_prod_text"
                android:textColor="@color/colorSplash"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/margin_regular"
                app:layout_constraintTop_toBottomOf="@+id/your_product"
                app:layout_constraintStart_toStartOf="@+id/your_product"
                app:layout_constraintEnd_toEndOf="@+id/your_product"/>

            <View
                android:id="@+id/divider1"
                style="@style/HorizontalDivider2"
                android:layout_marginTop="@dimen/margin_regular"
                android:background="@color/colorSplash"
                app:layout_constraintTop_toBottomOf="@+id/list_of_prod_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_recycler_list"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginBottom="@dimen/margin_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                app:layout_constraintVertical_bias="0.25"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>