<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

    <variable
        name="event"
        type="com.adrosonic.craftexchange.ui.interfaces.BrandProductClick"/>

    <variable
        name="brandDetails"
        type="com.adrosonic.craftexchange.repository.data.response.buyer.viewProducts.BrandDetails"/>

</data>
    <androidx.cardview.widget.CardView
        android:id="@+id/brand_prod_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_regular"
        app:cardElevation="@dimen/margin_small"
        android:onClick="@{()->event.onItemClick(brandDetails)}">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/prod_img"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/prod_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:layout_below="@+id/prod_img" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>