<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.adrosonic.craftexchange.ui.modules.authentication.register.RegisterViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buyer_register_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.modules.buyer.authentication.register.BuyerRegisterUsernameFragment">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:paddingStart="@dimen/margin_regular"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buyer_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:paddingEnd="18dp"
            android:text="@string/buyer"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/back_button" />

        <include
            android:id="@+id/logo_part"
            layout="@layout/logo_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView_enter_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_regular"
            android:fontFamily="@font/playfair_regular"
            android:paddingStart="@dimen/margin_regular"
            android:paddingEnd="@dimen/margin_regular"
            android:text="@string/enter_email"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/Ques_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/logo_part"
            app:layout_constraintStart_toStartOf="@+id/logo_part"
            app:layout_constraintTop_toBottomOf="@+id/logo_part"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/textBox_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad"
            android:drawableStart="@drawable/ic_alternate_email_black_24dp"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:textSize="@dimen/edit_text"
            app:layout_constraintEnd_toEndOf="@+id/textView_enter_username"
            app:layout_constraintStart_toStartOf="@+id/textView_enter_username"
            app:layout_constraintTop_toBottomOf="@+id/textView_enter_username" />

        <Button
            android:id="@+id/button_send_otp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:text="@string/send_otp"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textBox_username"
            app:layout_constraintStart_toStartOf="@+id/textBox_username"
            app:layout_constraintTop_toBottomOf="@+id/textBox_username" />

        <TextView
            android:id="@+id/textView_enter_rec_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:text="@string/enter_otp"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintEnd_toEndOf="@+id/button_send_otp"
            app:layout_constraintStart_toStartOf="@+id/button_send_otp"
            app:layout_constraintTop_toBottomOf="@+id/button_send_otp" />

        <EditText
            android:id="@+id/textBox_otp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginEnd="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:maxLength="6"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_enter_rec_otp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_enter_rec_otp"
            app:layout_constraintTop_toBottomOf="@+id/textView_enter_rec_otp" />

        <Button
            android:id="@+id/button_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad_black"
            android:fontFamily="@font/lato_regular"
            android:text="@string/verify_proceed"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="@+id/textBox_otp"
            app:layout_constraintStart_toStartOf="@+id/textBox_otp"
            app:layout_constraintTop_toBottomOf="@+id/textBox_otp"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider2"
            style="@style/HorizontalDivider3"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_verify" />

        <TextView
            android:id="@+id/textView_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reach_out_text"
            android:textColor="#000"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="@dimen/margin_regular"
            app:layout_constraintEnd_toEndOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/divider2"/>

        <Button
            android:id="@+id/button_reach"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:background="@drawable/rectangle_round_small"
            android:fontFamily="@font/lato_regular"
            android:text="@string/reach_out_button"
            android:textAllCaps="false"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
            app:layout_constraintEnd_toEndOf="@+id/textView_contact_us"
            app:layout_constraintStart_toStartOf="@+id/textView_contact_us"
            app:layout_constraintTop_toBottomOf="@+id/textView_contact_us"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/privacy_policy"
            android:textColor="@color/lighter_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>