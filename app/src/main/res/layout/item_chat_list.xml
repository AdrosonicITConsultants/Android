<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chat"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:padding="@dimen/expandable_layout_std_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftEdgeSwipeOffset="0dp"
            app:rightEdgeSwipeOffset="0dp">

            <LinearLayout
                android:id="@+id/ll_markasread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/nav_menu_text"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/file_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mark"
                    android:tint="@color/white_text" />

                <TextView
                    android:id="@+id/markRead"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mark_as_read"
                    android:textColor="@color/white_text"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chat_container_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chat_stage_color"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@drawable/multicolor_grad"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/chat_contact_pic"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/buyer_logo_placeholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/chat_stage_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_buyer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/lato_regular"
                    android:text="Adrosonic consltancye India pvt. Adrosonic consltancye India pvt. "
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/txt_date_time"
                    app:layout_constraintStart_toEndOf="@+id/chat_contact_pic"
                    app:layout_constraintTop_toTopOf="@+id/chat_contact_pic" />

                <TextView
                    android:id="@+id/txt_enq_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Enquiry Code"
                    android:textColor="@color/darker_gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/chat_contact_pic"
                    app:layout_constraintStart_toEndOf="@+id/chat_contact_pic"
                    app:layout_constraintTop_toBottomOf="@+id/txt_buyer_name"
                    app:layout_constraintVertical_bias="0.285" />

                <TextView
                    android:id="@+id/txt_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textSize="10sp"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/txt_buyer_name"
                    app:layout_constraintTop_toTopOf="@+id/chat_contact_pic" />

                <TextView
                    android:id="@+id/txt_unread_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rect_round_blue_solid"
                    android:text="200"
                    android:textColor="@color/white_text"
                    android:textSize="7sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintEnd_toStartOf="@+id/imgEscalations"
                    app:layout_constraintStart_toStartOf="@+id/txt_date_time"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_time" />

                <ImageView
                    android:id="@+id/imgEscalations"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/txt_date_time"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_time"
                    app:srcCompat="@drawable/ic_escalation" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.daimajia.swipe.SwipeLayout>
    </androidx.cardview.widget.CardView>

</layout>