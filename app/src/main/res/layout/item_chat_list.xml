<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="4dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_chat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chat_stage_color"
                android:layout_width="5dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/chat_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/chat_stage_color"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/enquiry_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black_text"
                android:textSize="8dp"
                app:layout_constraintTop_toBottomOf="@+id/brand_name"
                app:layout_constraintStart_toEndOf="@id/chat_profile_image"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/margin_semimedium"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/lato_light"
                android:maxLines="1"
                android:textColor="@color/swipe_background"
                android:textSize="11dp"
                app:layout_constraintStart_toEndOf="@id/chat_profile_image"
                app:layout_constraintTop_toTopOf="@id/chat_profile_image"
                />

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@id/enquiry_id_text"
                app:layout_constraintTop_toTopOf="@id/enquiry_id_text"
                app:layout_constraintStart_toEndOf="@id/enquiry_id_text"

                />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="end"
                android:textSize="8sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/brand_name"
                app:layout_constraintTop_toTopOf="@id/brand_name"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>