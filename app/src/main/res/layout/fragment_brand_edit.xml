<?xml version="1.0" encoding="utf-8"?>

<layout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/buyer_delivery_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.modules.buyer.profile.editProfile.BrandEditFragment">

        <LinearLayout
            android:id="@+id/change_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/change_logo_img"
                android:src="@drawable/buyer_logo_placeholder"
                android:layout_width="@dimen/profile_img"
                android:layout_height="@dimen/profile_img" />

            <TextView
                android:id="@+id/change_logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/change_brand_logo"
                android:textColor="@color/clickable_text_color"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/field_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/enter_gst"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"/>

        <EditText
            android:id="@+id/gst"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:digits="@string/alphaNumeric"
            android:inputType="textCapCharacters"
            android:maxLength="15"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />


        <TextView
            android:id="@+id/field_cin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/enter_cin"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"/>

        <EditText
            android:id="@+id/cin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:digits="@string/alphaNumeric"
            android:inputType="textCapCharacters"
            android:maxLength="21"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />

        <TextView
            android:id="@+id/field_pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/pan"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"/>

        <EditText
            android:id="@+id/pan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:digits="@string/alphaNumeric"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />

        <View
            android:id="@+id/divider"
            style="@style/HorizontalDivider3"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/details_poc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/detials_of_poc"
            android:textSize="20sp"
            android:textColor="@color/black_text"
            android:fontFamily="@font/playfair_regular"
            android:textStyle=""/>

        <TextView
            android:id="@+id/field_poc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/name"
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:fontFamily="@font/lato_regular"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black_text"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />

        <TextView
            android:id="@+id/field_poc_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:fontFamily="@font/lato_regular"
            android:text="@string/mobile"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black_text"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />

        <TextView
            android:id="@+id/field_poc_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:fontFamily="@font/lato_regular"
            android:text="@string/email"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="@dimen/margin_regular"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black_text"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</layout>