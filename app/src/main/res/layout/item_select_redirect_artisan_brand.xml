<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bd_underline"
        android:orientation="horizontal"
        android:padding="@dimen/expandable_layout_std_padding"
        android:weightSum="10">


        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_cr_unchecked"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtArtisanBrand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:maxLines="2"
            android:text=""
            android:gravity="center"
            android:textColor="@color/apply_bg_color" />

        <TextView
            android:id="@+id/txtCluster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:maxLines="2"
            android:text=""
            android:gravity="center"
            android:textColor="@color/apply_bg_color" />

        <TextView
            android:id="@+id/txtRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:text=""
            android:gravity="center"
            android:textColor="@color/lighter_gray" />

        <ImageView
            android:id="@+id/imgEye"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="right"
            android:src="@drawable/ic_eye_white"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>