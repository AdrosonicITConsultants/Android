<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.adrosonic.craftexchangemarketing.ui.modules.authentication.reset.ResetPasswordViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_text"
            tools:context=".ui.modules.authentication.reset.ResetPasswordFragment">

            <include
                android:id="@+id/logo_part"
                layout="@layout/logo_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_enter_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular"
                android:fontFamily="@font/playfair_regular"
                android:paddingStart="@dimen/margin_regular"
                android:paddingEnd="@dimen/margin_regular"
                android:text="@string/resertPassword"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/Ques_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_part"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/textBox_currentPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/margin_regular"
                android:background="@drawable/bd_underline"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/current_password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/colorBackground"
                android:textColorHint="@color/colorBackground"
                android:textSize="@dimen/edit_text"
                app:layout_constraintEnd_toEndOf="@+id/textView_enter_password"
                app:layout_constraintStart_toStartOf="@+id/textView_enter_password"
                app:layout_constraintTop_toBottomOf="@+id/textView_enter_password" />

            <EditText
                android:id="@+id/textBox_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="@dimen/margin_regular"
                android:layout_marginTop="32dp"
                android:background="@drawable/bd_underline"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/colorBackground"
                android:textColorHint="@color/colorBackground"
                android:textSize="@dimen/edit_text"
                app:layout_constraintEnd_toEndOf="@+id/textBox_currentPassword"
                app:layout_constraintStart_toStartOf="@+id/textBox_currentPassword"
                app:layout_constraintTop_toBottomOf="@+id/textBox_currentPassword" />

            <EditText
                android:id="@+id/textBox_retype_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:layout_marginEnd="@dimen/margin_regular"
                android:background="@drawable/bd_underline"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/reenter_pwd"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/colorBackground"
                android:textColorHint="@color/colorBackground"
                android:textSize="@dimen/edit_text"
                app:layout_constraintEnd_toEndOf="@+id/textBox_password"
                app:layout_constraintStart_toStartOf="@+id/textBox_password"
                app:layout_constraintTop_toBottomOf="@+id/textBox_password" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_semimedium"
                android:background="@drawable/rectangle_round_small"
                android:fontFamily="@font/lato_regular"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBox_retype_pwd" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/privacy_policy"
                android:textColor="@android:color/holo_blue_bright"
                android:textColorLink="#FFFFFF"
                android:textSize="10sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

