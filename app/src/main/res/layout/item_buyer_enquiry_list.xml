<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_buyer_enquiry"
        android:layout_marginBottom="4dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftEdgeSwipeOffset="0dp"
            app:rightEdgeSwipeOffset="0dp">

            <LinearLayout
                android:id="@+id/right_swipe"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/enquiry_swipe_background"
                android:weightSum="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_chat_outline"
                    android:layout_gravity="center|bottom"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chat"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white_text"
                    android:textAlignment="center"
                    android:fontFamily="@font/lato_regular"
                    android:layout_gravity="center|bottom"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enquiry_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/enq_stage_color"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@drawable/multicolor_grad"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/enq_stage_color"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/enquiry_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/product_availability_text"
                    app:layout_constraintBottom_toBottomOf="@+id/product_image"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    app:layout_constraintTop_toTopOf="@+id/product_image"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_light"
                    android:maxLines="2"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/date_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/enquiry_id_text"
                    app:layout_constraintTop_toBottomOf="@+id/enquiry_id_text" />

                <TextView
                    android:id="@+id/brand_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/margin_semimedium"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_light"
                    android:maxLines="2"
                    android:textColor="@color/swipe_background"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/date_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/product_name"
                    app:layout_constraintTop_toBottomOf="@+id/product_name" />

                <TextView
                    android:id="@+id/product_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/date_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/brand_name"
                    app:layout_constraintTop_toBottomOf="@+id/brand_name"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/product_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/product_note_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/enquiry_id_text" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="8sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/product_amount"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/enquiry_status_dot"
                    android:layout_width="8sp"
                    android:layout_height="8sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_dot"
                    app:layout_constraintTop_toTopOf="@+id/enquiry_status_text"
                    app:layout_constraintBottom_toBottomOf="@+id/enquiry_status_text"/>

                <TextView
                    android:id="@+id/enquiry_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="8sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/date_text"
                    app:layout_constraintEnd_toStartOf="@+id/enquiry_status_dot"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.daimajia.swipe.SwipeLayout>
    </androidx.cardview.widget.CardView>

</layout>