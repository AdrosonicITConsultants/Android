<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_buyer_enquiry"
        android:layout_marginBottom="4dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enquiry_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/enq_stage_color"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/enq_stage_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/enquiry_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/product_note_text"
                    android:text="A-S-E-234DF"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/product_image"/>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="12sp"
                    android:text="Laal Dupatta udd gaya mere hwa k zosssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssske se"
                    android:textColor="@color/black_text"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@id/enquiry_stage_text"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    app:layout_constraintTop_toBottomOf="@+id/enquiry_id_text" />

                <TextView
                    android:id="@+id/brand_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:maxLines="2"
                    android:text="AB fashion house yosssssssssssssssssssssssssss yo"
                    android:textColor="@color/swipe_background"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/enquiry_stage_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/product_image"
                    app:layout_constraintTop_toBottomOf="@+id/product_name" />


                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="10sp"
                    android:text="3434343213321233333333"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/enquiry_stage_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/enquiry_swipe_background"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Requested MOQ for available Ptof"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date_text"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/product_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="8sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="ssssssssssss"
                    app:layout_constraintTop_toBottomOf="@+id/enquiry_stage_text"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>