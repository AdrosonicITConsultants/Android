<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.adrosonic.craftexchange.ui.modules.authentication.register.RegisterViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buyer_register_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.modules.buyer.authentication.register.BuyerRegisterWebFragment">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:paddingStart="@dimen/margin_regular"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buyer_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:paddingEnd="18dp"
            android:text="@string/buyer"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/back_button" />

        <include
            android:id="@+id/logo_part"
            layout="@layout/logo_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView_web_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_regular"
            android:fontFamily="@font/playfair_regular"
            android:paddingStart="@dimen/margin_regular"
            android:paddingEnd="@dimen/margin_regular"
            android:text="@string/about_web"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/Ques_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/logo_part"
            app:layout_constraintStart_toStartOf="@+id/logo_part"
            app:layout_constraintTop_toBottomOf="@+id/logo_part"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_skiplinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/text_skip_details"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="@+id/textView_web_details"
            app:layout_constraintEnd_toEndOf="@+id/textView_web_details"
            app:layout_constraintTop_toBottomOf="@+id/textView_web_details"/>

        <TextView
            android:id="@+id/text_weblink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:fontFamily="@font/lato_regular"
            android:text="@string/weblink"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_skiplinks" />

        <EditText
            android:id="@+id/textBox_weblink"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_weblink"
            app:layout_constraintStart_toStartOf="@+id/text_weblink"
            app:layout_constraintTop_toBottomOf="@+id/text_weblink" />

        <TextView
            android:id="@+id/text_sociallink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/sociallink"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_weblink" />

        <EditText
            android:id="@+id/textBox_sociallink"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_sociallink"
            app:layout_constraintStart_toStartOf="@+id/text_sociallink"
            app:layout_constraintTop_toBottomOf="@+id/text_sociallink" />

        <Button
            android:id="@+id/button_complete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad_black"
            android:fontFamily="@font/lato_regular"
            android:text="@string/complete"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textBox_sociallink"
            app:layout_constraintStart_toStartOf="@+id/textBox_sociallink"
            app:layout_constraintTop_toBottomOf="@+id/textBox_sociallink"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_semimedium"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/margin_regular"
            android:paddingEnd="@dimen/margin_regular"
            android:text="@string/text_to_tnc"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/privacy_policy"
            app:layout_constraintEnd_toEndOf="@+id/button_complete"
            app:layout_constraintStart_toStartOf="@+id/button_complete"
            app:layout_constraintTop_toBottomOf="@+id/button_complete"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/privacy_policy"
            android:textColor="@color/lighter_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>