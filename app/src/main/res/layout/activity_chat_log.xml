<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chat_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:textColor="@color/red_logo"
            android:textSize="@dimen/product_description_text"
            app:layout_constraintEnd_toStartOf="@+id/icon_change_request"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/chat_profile_image"
            app:layout_constraintTop_toTopOf="@+id/chat_profile_image" />

        <TextView
            android:id="@+id/txt_enquiry_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato_regular"

            android:textSize="@dimen/product_availability_text"
            app:layout_constraintStart_toStartOf="@+id/brand_name"
            app:layout_constraintTop_toBottomOf="@+id/brand_name" />

        <ImageView
            android:id="@+id/icon_change_request"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_cr_with_txt"
            app:layout_constraintBottom_toBottomOf="@+id/icon_escalation"
            app:layout_constraintEnd_toStartOf="@+id/icon_escalation"
            app:layout_constraintTop_toTopOf="@+id/brand_name"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/icon_escalation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_regular"
            android:src="@drawable/ic_escalation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/details_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bd_underline"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_profile_image">

            <TextView
                android:id="@+id/enquiry_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/status"
                android:textColor="@color/dark_green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/view_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_arrow_down"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:text="@string/view_details"
                android:textColor="@color/darker_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/chat_details_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="@+id/swipe_chats">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/expandable_layout_std_padding">

                <TextView
                    android:id="@+id/txt_date_started"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Date started: "
                    android:textColor="@color/darker_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_date_converted_to_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Date converted to order: "
                    android:textColor="@color/dark_green"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_date_last_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Date last updated on: "
                    android:textColor="@color/clickable_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_prod_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:text="Date last updated on: "
                    android:textColor="@color/dark_magenta"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_order_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="Order amount: "
                    android:textStyle="bold"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_goto_enq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:drawableLeft="@drawable/ic_receipt"
                    android:drawableTint="@color/red_logo"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="@string/go_to_enquiry"
                    android:textColor="@color/red_logo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_swipe_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:text="@string/swipe_up_to_close"
                    android:textColor="@color/darker_gray"
                    android:textSize="10sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_chats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_layer"
            tools:layout_editor_absoluteX="0dp">

            <com.github.bassaer.chatmessageview.view.ChatView
                android:id="@+id/chat_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:date_separator_font_size="16sp"
                app:message_font_size="12sp"
                app:message_max_width="200dp"
                app:option_button_enable="true"
                app:time_label_font_size="10sp"
                app:username_font_size="12sp">
            </com.github.bassaer.chatmessageview.view.ChatView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>