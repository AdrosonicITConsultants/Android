<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_tax_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/tax_invoice_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.modules.order.taxInv.TaxInvoiceActivity">

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="@dimen/margin_regular"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_keyboard_backspace_black_24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/btn_chat"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="@dimen/margin_regular"
                            android:layout_marginEnd="@dimen/margin_regular"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:focusable="true"
                            android:src="@drawable/ic_chat_enquiry"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/order_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/product_note_text"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/btn_back"
                            app:layout_constraintTop_toTopOf="@+id/btn_back" />


                        <TextView
                            android:id="@+id/order_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/order_code"
                            app:layout_constraintTop_toBottomOf="@+id/order_code" />

                        <FrameLayout
                            android:id="@+id/prod_image_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_back_enq_view_artisan"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/order_start_date"
                            app:layout_constraintVertical_bias="0.0">

                            <ImageView
                                android:id="@+id/product_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:background="@drawable/brand_logo_back"
                                android:scaleType="fitXY" />

                        </FrameLayout>


                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/product_availability_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/prod_image_background" />

                        <TextView
                            android:id="@+id/product_availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/dark_magenta"
                            android:textSize="@dimen/product_availability_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/product_name" />

                        <TextView
                            android:id="@+id/product_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/product_note_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/product_availability" />

                        <TextView
                            android:id="@+id/order_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="@+id/product_amount"
                            app:layout_constraintStart_toStartOf="@+id/product_amount"
                            app:layout_constraintTop_toBottomOf="@+id/product_amount" />

                        <TextView
                            android:id="@+id/buyer_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/swipe_background"
                            android:textSize="8sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/order_status_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/middle_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSplash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_part">

                    <TextView
                        android:id="@+id/ti_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_regular"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/tax_invoice"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/product_availability_text"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/tax_inv_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ti_text">

                        <TextView
                            android:id="@+id/txt_fill_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/fill_tax_inv_for_order"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/product_note_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtQty"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/quantity"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/order_quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:inputType="number"
                                android:maxLength="2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/currency"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <Spinner
                                android:id="@+id/sp_currency"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtRatePerUnit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/rate_per_unit"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_rate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:inputType="number"
                                android:maxLength="6" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/prev_tot_amnt_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txtPrevTotAmt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/prev_total_amt"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_prev_total_amt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:inputType="number" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/adv_paid_amt_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txtAdvPayRecvd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/adv_pay_rec_as_pi"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_adv_pay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:inputType="number" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/delivery_charges"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_delivery_charge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:inputType="number" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/bd_underline"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtSgst"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="SGST @"
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/et_sgst"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|end"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:text="9" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|end"
                                    android:layout_weight="0.25"
                                    android:text="%" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/bd_underline"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtCgst"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="CGST @"
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/et_cgst"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|end"
                                    android:layout_weight="1"
                                    android:inputType="numberDecimal"
                                    android:text="9" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|end"
                                    android:layout_weight="0.25"
                                    android:text="%" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/final_amt_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/final_amt"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_final_amt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:enabled="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/amt_to_pay_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/amt_to_pay"
                                android:textColor="@color/darker_gray"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/et_amt_to_pay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_weight="3"
                                android:enabled="false" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bd_underline"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/chb_tnc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agree to " />

                            <TextView
                                android:id="@+id/txt_tnc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_regular"
                                android:text="terms and conditions"
                                android:textColor="@color/clickable_text_color"
                                android:textSize="@dimen/product_note_text" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_swipe_ti"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/rect_round_grad_blue_solid_swipe"
                            android:drawableStart="@drawable/ic_swipe_arrow"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="Click to generate Tax Invoice preview"
                            android:textAllCaps="false"
                            android:textColor="@color/white_text" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>

