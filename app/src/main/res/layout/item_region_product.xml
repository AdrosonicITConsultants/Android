<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.adrosonic.craftexchange.ui.interfaces.ClusterProductClick"/>

        <variable
            name="regionProduct"
            type="com.adrosonic.craftexchange.database.entities.realmEntities.ClusterList"/>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/region_prod_card"
        android:layout_margin="@dimen/margin_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_small"
        android:onClick="@{()->event.onItemClick(regionProduct)}">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cluster_prod_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_card_height"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/cluster_prod_adjective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cluster_prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/playfair_regular"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_gravity="center"
            android:textSize="@dimen/Ques_text"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>