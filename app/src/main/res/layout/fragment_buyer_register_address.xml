<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model"
            type="com.adrosonic.craftexchange.viewModels.AuthenticationViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buyer_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        tools:context=".ui.modules.buyer.auth.register.BuyerRegisterAddressFragment">

        <TextView
            android:id="@+id/buyer_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/buyer"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"/>

        <include
            android:id="@+id/logo_part"
            layout="@layout/logo_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView_enter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/playfair_regular"
            android:paddingStart="@dimen/margin_regular"
            android:paddingEnd="@dimen/margin_regular"
            android:text="@string/enter_address"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/Ques_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_part"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/text_addr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/addr1"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_enter_address" />

        <EditText
            android:id="@+id/textBox_addr1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_addr1" />

        <TextView
            android:id="@+id/text_addr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/addr2"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_addr1" />

        <EditText
            android:id="@+id/textBox_addr2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_addr2" />

        <TextView
            android:id="@+id/text_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/street"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_addr2" />

        <EditText
            android:id="@+id/textBox_street"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_street" />

        <TextView
            android:id="@+id/text_landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/landmark"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_street" />

        <EditText
            android:id="@+id/textBox_landmark"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_landmark" />

        <TextView
            android:id="@+id/text_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/district"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_landmark" />

        <EditText
            android:id="@+id/textBox_district"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_district" />

        <TextView
            android:id="@+id/text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/city"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_district" />

        <EditText
            android:id="@+id/textBox_city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_city" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/state"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_city" />

        <EditText
            android:id="@+id/textBox_state"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_state"/>

        <TextView
            android:id="@+id/text_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/country_text"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBox_state" />


        <RelativeLayout
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:background="@drawable/rectangle_round_grad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_country">

            <Spinner
                android:id="@+id/textBox_country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_regular"
                android:prompt="@string/country"
                android:textSize="16sp"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text_pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="@string/text_pincode"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <EditText
            android:id="@+id/textBox_pincode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_semimedium"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/margin_semimedium"
            android:maxLength="6"
            android:background="@drawable/rectangle_round_grad"
            android:fontFamily="@font/lato_regular"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_pincode" />


        <TextView
            android:id="@+id/asterik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:textColor="@color/red_logo"
            android:textSize="10sp"
            android:layout_marginEnd="1dp"
            app:layout_constraintTop_toTopOf="@+id/text_comp_field"
            app:layout_constraintBottom_toBottomOf="@+id/text_comp_field"
            app:layout_constraintEnd_toStartOf="@+id/text_comp_field"/>

        <TextView
            android:id="@+id/text_comp_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/comp_field"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/margin_regular"
            app:layout_constraintEnd_toEndOf="@+id/textBox_pincode"
            app:layout_constraintStart_toStartOf="@+id/textBox_pincode"
            app:layout_constraintTop_toBottomOf="@+id/textBox_pincode" />

        <View
            android:id="@+id/divider2"
            style="@style/HorizontalDivider"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/text_comp_field"
            app:layout_constraintEnd_toEndOf="@+id/text_comp_field"
            app:layout_constraintTop_toBottomOf="@+id/text_comp_field"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/next_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="@+id/divider2">

            <TextView
                android:id="@+id/text_nextup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_nextup"
                android:fontFamily="@font/lato_regular"
                android:textSize="8sp"
                app:layout_constraintRight_toLeftOf="@+id/text_comp_details"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_comp_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_web_details"
                android:textColor="#000"
                android:fontFamily="@font/lato_regular"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_next"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_round_grad_black_solid"
            android:fontFamily="@font/lato_regular"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_regular"
            app:layout_constraintEnd_toEndOf="@+id/next_comp"
            app:layout_constraintStart_toStartOf="@+id/next_comp"
            app:layout_constraintTop_toBottomOf="@+id/next_comp" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            android:text="@string/privacy_policy"
            android:textColor="@color/lighter_gray"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/button_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>