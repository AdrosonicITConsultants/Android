<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/buyer_general_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.modules.buyer.profile.GeneralFragment">

        <TextView
            android:id="@+id/field_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/designation"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="Designation"/>

        <TextView
            android:id="@+id/field_reg_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/reg_addr"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/reg_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:text="xxx xxx, xxxx xxxx xxxxx\n xxxx xxx xx"
            android:layout_marginStart="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:textColor="@android:color/holo_blue_bright"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:text="Country"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_black_18dp"
            android:drawablePadding="8dp"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"
            android:text="abc@adrosonic.com"
            android:textColor="@color/black_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_18dp"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/alt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_18dp"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            android:fontFamily="@font/lato_regular"/>


    </LinearLayout>
</layout>
