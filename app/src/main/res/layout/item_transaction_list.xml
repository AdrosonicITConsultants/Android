<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/transaction_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/colorSplash"
        android:padding="8dp"
        android:elevation="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorSplash"
                android:weightSum="11">

                <ImageView
                    android:id="@+id/transaction_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:src="@drawable/ic_home"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/enquiry_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="start"
                        android:textColor="@color/swipe_background"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/transaction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:textSize="8sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/payment_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="10sp"/>

                <ImageView
                    android:id="@+id/dropdown_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:src="@drawable/ic_key_down_grey"
                    android:background="?selectableItemBackgroundBorderless"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transac_bottom_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp"
                android:background="@color/colorSplash"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:id="@+id/transaction_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:textColor="@color/black_text"
                    android:layout_margin="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/transaction_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/darker_gray"
                    android:gravity="start"
                    android:layout_margin="1dp"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/btn_view_doc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/lato_light"
                    android:textColor="#EF8181"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:background="?selectableItemBackgroundBorderless"
                    android:drawablePadding="4dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/btn_enquiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_enquiry_red"
                    android:layout_margin="1dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>